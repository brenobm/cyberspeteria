<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="org.brenomachado.cyberspeteria.ProdutosFragment">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Bebidas"
            android:layout_marginTop="55dip" />


        <ListView
            android:id="@+id/list_bebidas"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dip" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="5dip"
            android:text="Produtos" />

        <ListView
            android:id="@+id/list_produtos"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dip" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="5dip"
            android:text="Monte seu espeto" />

        <ListView
            android:id="@+id/list_monte_seu_espeto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#DDDDDD"
            android:layout_marginTop="5dip" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#DDDDDD">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/btn_adicionar"
                android:text="Adicionar"/>

            <ListView
                android:id="@+id/list_montados"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#DDDDDD"
                android:layout_alignTop="@+id/btn_adicionar"
                android:layout_marginTop="5dip" />
        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:id="@+id/gravar_pedido"
            android:text="Gravar Pedido"
            />
    </LinearLayout>
</ScrollView>