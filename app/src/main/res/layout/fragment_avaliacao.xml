<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.brenomachado.cyberspeteria.AvaliacaoFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="55dip"
        android:text="Avaliação do Atendimento:"
        android:id="@+id/textView1"
        android:textStyle="bold"
        android:textSize="@dimen/design_navigation_elevation" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="5dip"
        android:text="Observações sobre o atendimento:"
        android:id="@+id/textView2"
        android:textStyle="bold"
        android:layout_below="@+id/ratingBar"
        android:textSize="@dimen/design_navigation_elevation" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="15dip"
        android:text="Avaliação do Aplicativo:"
        android:id="@+id/textView3"
        android:layout_below="@+id/editText2"
        android:textStyle="bold"
        android:textSize="@dimen/design_navigation_elevation" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar2"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="5dip"
        android:text="Observações sobre o aplicativo:"
        android:id="@+id/textView4"
        android:textStyle="bold"
        android:layout_below="@+id/ratingBar2"
        android:textSize="@dimen/design_navigation_elevation" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="180dip"
        android:layout_height="wrap_content"
        android:text="Salvar Avaliação"
        android:id="@+id/botao_avaliacao"
        android:layout_alignTop="@+id/botao_cancelar2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="180dip"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/botao_cancelar2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
